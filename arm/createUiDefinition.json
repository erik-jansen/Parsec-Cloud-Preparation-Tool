{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "vmSize",
        "type": "Microsoft.Compute.SizeSelector",
        "label": "VM size",
        "toolTip": "The size of the virtual machine",
        "recommendedSizes": [
          "Standard_NV6",
          "Standard_NV12s_v3"
        ],
        "constraints": {
          "allowedSizes": [
            "Standard_NV6",
            "Standard_NV12",
            "Standard_NV24",
            "Standard_NV12s_v3",
            "Standard_NV24s_v3",
            "Standard_NV48s_v3"
          ]
        },
        "osPlatform": "Windows",
        "imageReference": {
          "publisher": "MicrosoftWindowsServer",
          "offer": "WindowsServer",
          "sku": "2019-Datacenter"
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Admin username",
        "toolTip": "Admin username for the VM.",
        "osPlatform": "Windows"
      },
      {
        "name": "adminPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": {
          "password": "Admin password for the VM."
        },
        "constraints": {
          "required": true,
          "customPasswordRegex": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[@!#$%?^{}~&+`¬:;_\\-=|<>\\\/\\[\\]£()*])(?=\\S+$).{8,}$",
          "customValidationMessage": "Password must be at least 8 characters long, containing at least one of each of the following: upper case characters, lower case characters, numbers and special characters."
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Windows",
        "visible": true
      }
    ],
    "steps": [
      {
        "name": "parsecConfig",
        "label": "Parsec Configuration",
        "subLabel": {
          "preValidation": "Configure Parsec Teams ",
          "postValidation": "Done"
        },
        "bladeTitle": "Parsec Configuration",
        "elements": [
          {
            "name": "teamId",
            "type": "Microsoft.Common.TextBox",
            "label": "Parsec Team ID",
            "toolTip": "Parsec Team ID",
            "visible": true,
            "constraints": {
              "required": true
            }
          },
          {
            "name": "teamKey",
            "type": "Microsoft.Common.TextBox",
            "label": "Parsec Team Key",
            "toolTip": "Parsec Team Key",
            "visible": true,
            "constraints": {
              "required": true
            }
          },
          {
            "name": "host",
            "type": "Microsoft.Common.TextBox",
            "label": "Hostname",
            "toolTip": "Hostname for the Parsec VM",
            "visible": true,
            "constraints": {
              "required": false
            }
          },
          {
            "name": "userEmail",
            "type": "Microsoft.Common.TextBox",
            "label": "Parsec User Email",
            "toolTip": "Email address of the Parsec Account",
            "visible": true,
            "constraints": {
              "required": false
            }
          },
          {
            "name": "isGuestAccess",
            "type": "Microsoft.Common.CheckBox",
            "label": "Guest Access",
            "toolTip": "Configure Guest Access",
            "visible": true
          }
        ]
      },
      {
        "name": "infrastructureConfig",
        "label": "VM Network",
        "subLabel": {
          "preValidation": "Configure the VM network settings",
          "postValidation": "Done"
        },
        "bladeTitle": "VM Network",
        "elements": [
          {
            "name": "ipSection",
            "type": "Microsoft.Common.Section",
            "label": "Configure IP",
            "elements": [
              {
                "name": "dnsAndPublicIP",
                "type": "Microsoft.Network.PublicIpAddressCombo",
                "label": {
                  "publicIpAddress": "Public IP address name",
                  "domainNameLabel": "DNS Prefix"
                },
                "toolTip": {
                  "domainNameLabel": "Unique DNS Prefix for the Parsec VM public IP address."
                },
                "defaultValue": {
                  "publicIpAddressName": "ParsecVm-IP",
                  "domainNameLabel": "[concat('parsec', take(replace(guid(), '-', ''), 6))]"
                },
                "options": {
                  "hideNone": false,
                  "hideDomainNameLabel": false
                }
              }
            ],
            "visible": true
          },
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "Virtual Network Name",
              "subnets": "Subnet requried for Azure Application"
            },
            "defaultValue": {
              "name": "ParsecVm-vnet",
              "addressPrefixSize": "/24"
            },
            "constraints": {
              "minAddressPrefixSize": "/24"
            },
            "subnets": {
              "subnet1": {
                "label": "Subnet name",
                "defaultValue": {
                  "name": "ParsecVm-subnet",
                  "addressPrefixSize": "/26"
                },
                "constraints": {
                  "minAddressPrefixSize": "/26",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": false
                }
              }
            }
          }
        ]
      },
      {
        "name": "tags",
        "label": "Tags",
        "elements": [
          {
            "name": "tagsByResource",
            "type": "Microsoft.Common.TagsByResource",
            "resources": [
              "Microsoft.Storage/storageAccounts",
              "Microsoft.Compute/virtualMachines"
            ]
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "vmSize": "[basics('vmSize')]",
      "adminName": "[basics('adminUsername')]",
      "adminPass": "[basics('adminPassword').password]",
      "parsec_teamId": "[steps('parsecConfig').teamId]",
      "parsec_teamKey": "[steps('parsecConfig').teamKey]",
      "parsec_host": "[steps('parsecConfig').host]",
      "parsec_userEmail": "[steps('parsecConfig').userEmail]",
      "parsec_isGuestAccess": "[steps('parsecConfig').isGuestAccess]",
      "vNetName": "[steps('infrastructureConfig').virtualNetwork.name]",
      "vNetARPrefixes": "[steps('infrastructureConfig').virtualNetwork.addressPrefixes]",
      "VNetNewOrExisting": "[steps('infrastructureConfig').virtualNetwork.newOrExisting]",
      "subNetName": "[steps('infrastructureConfig').virtualNetwork.subnets.subnet1.name]",
      "subNetARPrefix": "[steps('infrastructureConfig').virtualNetwork.subnets.subnet1.addressPrefix]",
      "publicIpName": "[steps('infrastructureConfig').ipSection.dnsAndPublicIP.name]",
      "publicIpDns": "[steps('infrastructureConfig').ipSection.dnsAndPublicIP.domainNameLabel]",
      "publicIpAllocationMethod": "[steps('infrastructureConfig').ipSection.dnsAndPublicIP.publicIPAllocationMethod]",
      "publicIpSku": "[steps('infrastructureConfig').ipSection.dnsAndPublicIP.sku]",
      "publicIpNewOrExisting": "[steps('infrastructureConfig').ipSection.dnsAndPublicIP.newOrExistingOrNone]",
      "outTagsByResource": "[steps('tags').tagsByResource]"
    }
  }
}
